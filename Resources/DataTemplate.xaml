        <view:HomeContentView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModel:MatchContentVM}">
        <view:MatchContentView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModel:ProfileContentVM}">
        <view:TrainingContentView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModel:TrainingContentVM}">
